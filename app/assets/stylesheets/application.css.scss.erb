body {
 background: url(<%= asset_path 'background.png' %>) center center repeat;
 padding: 0;
 margin: 0;
 font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

#page-header {
 display: block;
 width: 100%;
 background: #FFF;
 box-shadow: 0 2px 2px #999;
 margin: 0 0 10px;
 padding: 15px 0;
 text-align: center;
 #logo {
   text-indent: -10000px;
   width: 98px;
   height: 30px;
   background: url(<%= asset_path 'logo.png' %>) center center;
   background-size: 100%;

   border: none;
   display: inline-block;
 }
}

#page-footer {
  width: 420px;
  font-size: 11px;
  color: #666;
  text-align: center;
  margin: 5px auto;
  line-height: 1.8em;

  p {
    margin: 5px 0;
  }
}

a {
  text-decoration: none;
  font-weight: bold;
  color: #666;
  &:hover, &:active { color: black; }
}

#content {
  width: 460px;
  box-shadow: 1px 1px 1px #999;
  background: #FFF;
  padding: 10px;
  margin: 20px auto;

  h1 {
    margin: 0 0 10px;
    font-size: 18px;
  }

  h2 {
    margin: 0 0 10px;
    font-size: 16px;
  }

  p {
    font-size: 12px;
    color: #333;
    line-height: 1.8em;
    margin: 0 0 10px;
  }

  dl {
    font-size: 12px;
    padding: 0;
    margin: 0;
    dt {
      margin: 0 0 5px;;
      font-size: 12px;
      font-weight: bold;
      color: #000;
      padding: 0;
      vertical-align: middle;
    }

    dd {
      margin: 0 0 10px;
      color: #444;
      padding: 0;
    }

  }

}

#team-image {
  width: 460px;
  height: 307px;
  position: relative;
  background: none;
  margin: 0 0 10px;

  .shadow {
    box-shadow: inset  1px 1px 10px #000;
    width: 460px;
    height: 307px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
  }

  img {
    width: 460px;
    height: 307px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

}