 body {
  background: url(<%= asset_path 'background.png' %>) center center repeat;
  padding: 0;
  margin: 0;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
 }

 #page-header {
  display: block;
  width: 100%;
  background: #FFF;
  box-shadow: 0 2px 2px #999;
  margin: 0 0 10px;
  padding: 15px 0;
  text-align: center;
  #logo {
    text-indent: -10000px;
    width: 98px;
    height: 30px;
    background: url(<%= asset_path 'logo.png' %>) center center;
    background-size: 100%;

    border: none;
    display: inline-block;
  }
 }
