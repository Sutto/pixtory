#no-moments-nearby {
  width: 480px;
  text-align: center;
  margin: 100px auto;
  color: #444;
  font-size: 18px;
  line-height: 1.5em;
  p { margin: 0; }
}

#welcome {
  width: 460px;
  margin: 100px auto;
  background: #FFF;
  box-shadow: 1px 1px 1px #999;
  padding: 10px;

  #introduction {
    color: #333;
    margin: 10px 0 20px;
    font-size: 18px;
    line-height: 1.5em;
    text-align: center;
  }

  #exploration-choices {
    text-align: center;
    margin: 0 0 10px;

    span.or {
      color: #999;
      padding: 0 5px;
      font-size: 14px;
    }

    a {
      padding: 10px 15px;
      border: 1px solid #EEE;
      box-shadow: 1px 1px 1px #999;
      display: inline-block;
      background: url(<%= asset_path 'button-overlay.png' %>) center center repeat-x #F9F9F9;
      border-radius: 5px;
      font-size: 16px;
      color: #982f2b;

      &:hover {
        background: #FFF;
        color: #621e1c;
      }

    }
  }

}

#moments {
  padding: 0;
  text-align: center;
  margin: 20px auto;
}

#single-moment {
  text-align: center;
  .moment {
    margin: 20px auto;
    display: inline-block;
    .moment-inner { display: none; }
    .moment-full { display: block; }
  }
}

.moment {
  padding: 10px;
  background: #FFF;
  display: inline-block;
  margin: 10px;
  box-shadow: 1px 1px 1px #999;

  #moments &:hover {
    background: #FFFDE8;
    cursor: pointer;
  }

  &.expanded {
    .moment-full { display: block; }
    .moment-inner { display: none; }
  }


  h2 {
    margin: 0;
    padding: 5px 0 0;
    display: block;
    overflow: hidden;

    .location {
      font-weight: bold;
      color: #333;
      float: left;
      display: inline-block;
      max-width: 80%;
      text-align: left;
    }

    .timestamp {
      color: #999;
      text-align: right;
      float: right;
      display: inline-block;
      font-weight: normal;
    }

  }

  .moment-full {
    display: none;
    z-index: 100;

    h2 {
      font-size: 16px;
      margin-top: 5px;
    }

    p.caption {
      border-top: 1px solid #CCC;
      padding: 5px 0;
      margin: 10px 0 0;
      text-align: left;
      font-size: 16px;
      line-height: 20px;
      color: #111;
    }

    p.description {
      border-top: 1px solid #CCC;
      padding: 10px 0 0;
      margin: 0;
      text-align: left;
      font-size: 12px;
      line-height: 18px;
      color: #666;
    }

    p.source {
      font-size: 10px;
      margin: 10px 0 5px;
      color: #AAA;
    }

  }

  .moment-inner {

    .image-container {
      background-size: 100%;
    }

    h2 { font-size: 12px; }

  }

}

#moment-overlay {
  position: fixed;
  display: none;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;

  #overlay-background {
    background: rgba(255, 255, 255, 0.75);
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
  }

  #overlay-inner {
    margin: 0;
    z-index: 150;
    top: 0;
    left: 0;
    position: fixed;
    text-align: center;
    display: block;

    .moment {
      margin: 0;
    }
  }

}
